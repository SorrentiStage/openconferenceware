<% page_title "#{@user.label.possessiveize} favorites" %>

<% if schedule_visible? %>
<div class='calendar_download'>
  <%= link_to "Download favorites", user_formatted_favorites_path(@user, :format => 'ics') %> /
  <%= link_to "Subscribe to favorites", user_formatted_favorites_url(@user, :format => 'ics', :protocol => 'webcal') %>
</div>
<% end -%>

<div id='list_user_favorites'>
<%= render :partial => "proposals/sub_list", :locals => {:container => @user, :records => @user_favorites, :header_prefix => "Favorite", :header_tag => "h4"} %>
</div>

<% run_when_dom_is_ready "$('#sub_list_for_event_#{Event.current.id} .show_toggle').click()" %>
